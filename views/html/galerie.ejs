            <li>
                <a href="#"> Cei mai ... &#9888;</a>
            </li>
        </ul>

    </nav>

<script src="/javascript/galeryPage.js"></script>


    <main class="sectionColor" id="descopera1">
        <div class="sectionContainer">
            <div>
                <h2>
                    Producători
                </h2>
                <hr class="pentruFrontHr">
            </div>
            <br>
            <% for (var i = 0; i < producatori.length; i++) { %>
            <% if(i % 4 == 0 && i != 0){ %>
                <div class="spatiuJos">
                </div>
            <% }%>
            <div class="card">
                <a href="/galerie"> <img src="/uploads/<%= producatori[i].poza %>" alt="nu are poza"  class="showCard"> </a>
                <div class="containerFront">
                    <h3>
                        <%= producatori[i].nume %>
                        <%= producatori[i].prenume %>
                    </h3>
                    <p> Produse:  <%= producatori[i].produse %> </p>
                </div>
            </div>
            <% } %>
        </div>
    </main>


<!--
