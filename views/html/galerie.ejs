    <header>
        <% include ../fragmente/header.ejs %>
    </header>

    <script src="/javascript/mobileMenu.js"></script>
    <script src="javascript/galeryPage.js"></script>
<!--
        ############################################################### Header ##################################
    -->

    <h1 class="universalHeading"> Descoperă producători din România </h1>

    <nav class="pentruNavShow">
        <ul>
            <li>
                <button onclick="showHide()" class="butonGradient"> Cele mai apreciate &hearts;</button>
            </li>
            <li>
                <a href="#">Cei mai apreciați &hearts; </a>
            </li>
            <li>
                <a href="#"> Cei mai vizitați &#9872; </a>
            </li>
            <li>
