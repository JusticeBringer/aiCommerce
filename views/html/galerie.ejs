    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <style>

    </style>
</head>

<body>
<!--
        ############################################################### Header ##################################
    -->

    <header>
        <% include ../fragmente/header.ejs %>
    </header>

    <script src="/javascript/mobileMenu.js"></script>
    <script src="javascript/galeryPage.js"></script>
<!--
        ############################################################### Header ##################################
    -->

    <h1 class="universalHeading"> Descoperă producători din România </h1>

    <nav class="pentruNavShow">
        <ul>
            <li>
                <button onclick="showN()" class="butonGradient" id="noiProdGal"> Cei mai noi producători &hearts;</button>
            </li>
            <li>
                <a href="#" onclick="showN2()" id="maiProdGal">Cei mai producători </a>
            </li>
            <li>
                <a href="#" id="ajaxButton" onclick="forAjax()"> Arată producatori.json </a>
            </li>
        </ul>

    </nav>

<script src="/javascript/galeryPage.js"></script>


    <main class="sectionColor" id="descopera1">
        <div class="sectionContainer">
            <div>
                <h2>
                    Producători
                </h2>
                <hr class="pentruFrontHr">
            </div>
            <br>
            <div id="idSection">
                <% for (var i = 0; i < producatori.length; i++) { %>
                <% if(i % 4 == 0 && i != 0){ %>
                    <div class="spatiuJos">
                    </div>
                <% }%>
                    <%include ../fragmente/template_user.ejs%>
                <% } %>
            </div>
            <div id="idSection2" class="showNone">
                <%function sortAfterDateee(vectorProd) {
                    return vectorProd.sort(function (a, b) {
                        if (a.dataInreg < b.dataInreg)
                            return 1;
                        return -1;
                    });
                } %>
                <%var sorted = sortAfterDateee(producatori);%>
                <% for (var i = 0; i < sorted.length; i++) { %>
                    <% if(i % 4 == 0 && i != 0){ %>
                        <div class="spatiuJos">
                        </div>
                    <% }%>
                    <%include ../fragmente/template_user.ejs%>
                <% } %>
            </div>
            <div id="idSection3" class="showNone">
                <%function returnNrProddd(vectorProd) {
                    const vectorProducatori = vectorProd.sort(function (a, b) {
                        if (a.produse > b.produse)
                            return 1;
                        return -1;
                    });
                    return vectorProducatori;
                }%>
                <%var mostProd = returnNrProddd(producatori);%>
                <% for (var i = 0; i < mostProd.length; i++) { %>
                    <% if(i % 4 == 0 && i != 0){ %>
                        <div class="spatiuJos">
                        </div>
                    <% }%>
                    <%include ../fragmente/template_user.ejs%>
                <% } %>
            </div>
        </div>
    </main>


<!--
############################################################### Footer ##################################
-->
<footer class="footer-distributed">
        <% include ../fragmente/footer.ejs %>
</footer>
<!--
############################################################### Footer ##################################
-->


</body>

</html>